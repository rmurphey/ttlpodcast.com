<p class="home--upcoming">
  The TTL Podcast, hosted by <a href="http://rmurphey.com">Rebecca Murphey</a>, features <strong>conversations with front-end developers</strong> at large organizations about how they do their jobs.

  Coming soon:
  <% for(var slug in public.episodes._data){ %>
    <% if (public.episodes._data[slug].upcoming) { %>
    <% if (public.episodes._data[slug].guestLink) { %>
      <a href="<%= public.episodes._data[slug].guestLink %>"><%= public.episodes._data[slug].guest %></a>.
    <% } else { %>
        <%= public.episodes._data[slug].guest %>.
    <% } %>
    <% } %>
  <% } %>
</p>

<ul class="home--post-list">
  <% var n = 0;
    for(var slug in public.episodes._data){
    n++ %>
  <% if (public.episodes._data[slug].upcoming !== true) { %>
    <li>
      <div class="med-contain">
        <img src="<%= public.episodes._data[slug].image %>" alt="<%= public.episodes._data[slug].description %>">
        <div class="home--ep-info">
        <h2 class="home--post-list--title">
          <a href="/episodes/<%= slug %>.html">
            <%= public.episodes._data[slug].title %>
          </a>
        </h2>
        <h3 class="home--post-list--guest">
          <%= public.episodes._data[slug].guest %>
          <% if (public.episodes._data[slug].twitter) { %>
            <% public.episodes._data[slug].twitter.forEach(function (twitterUsername) { %>
              <a class="guest-twitter-link" target="_blank" href="https://twitter.com/<%= twitterUsername %>"></a>
            <% }); %>
          <% } %>
        </h3>
        <p class="home--post-list--date">
          <%= public.episodes._data[slug].date %>
        </p>
        <p class="home--post-list--description">
          <%= public.episodes._data[slug].description %>
        </p>
        <audio controls src="<%= public.episodes._data[slug].audio %>"></audio>
      </div>
      <% if (n == 1 ){ %>
        <div class="home--sponsors">
        <a href="/sponsors/index.html">Brought to you by</a>
          <ul class="main-sponsor-list">
            <li class="main-sponsor-list--item"><img class="main-sponsor-list--logo" src="img/sponsors/saucelabs.png" alt="Sauce Labs"></li>
            <li class="main-sponsor-list--item"><img class="main-sponsor-list--logo" src="img/sponsors/travis-ci.png" alt="Travis CI"></li>
          </ul>
        </div>
      <% }; %>
    </li>
  <% } %>
<% }; %>
</ul>
